{% extends 'base.html.twig' %}

{% block title %}Empresa listado{% endblock %}

{% block body %}
    <h1>Empresa listado</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.nombre }}</td>
                <td>
                    <a href="{{ path('empresa_show', {'id': empresa.id}) }}">Ver</a>
                    <a href="{{ path('empresa_edit', {'id': empresa.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay empresas registradas</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('empresa_new') }}">Crear nueva</a>
{% endblock %}
